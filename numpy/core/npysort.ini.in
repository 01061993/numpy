[meta]
Name = npysort
Description = Core sort library for Numpy
Version = 0.1

[variables]
pkgname = @pkgname@
prefix = ${pkgdir}
libdir = ${prefix}@sep@lib
includedir = ${prefix}@sep@include

[default]
Libs = -L${libdir} -lnpysort
Cflags = -I${includedir}

[msvc]
Libs = /LIBPATH:${libdir} npysort.lib
Cflags = /INCLUDE:${includedir}
